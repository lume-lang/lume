namespace std

import std::ops (Add, Sub, Mul, Div)
import std::ops (Equal, Compare, Negate)

/// Represents an 32-bit single-precision floating-point number, which is
/// precise to ~7 decimal places, as defined in IEEE 754-2008.
pub struct Float {}

use Add: Float {
    fn external add(self, other: Float) -> Float
}

use Sub: Float {
    fn external sub(self, other: Float) -> Float
}

use Mul: Float {
    fn external mul(self, other: Float) -> Float
}

use Div: Float {
    fn external div(self, other: Float) -> Float
}

use Equal: Float {
    fn external eq(self, other: Float) -> Boolean
}

use Compare: Float {
    fn external lt(self, other: Float) -> Boolean
    fn external le(self, other: Float) -> Boolean

    fn external gt(self, other: Float) -> Boolean
    fn external ge(self, other: Float) -> Boolean
}

use Negate: Float {
    fn external negate(self) -> Float
}

/// Represents an 64-bit double-precision floating-point number, which is
/// precise to ~16 decimal places, as defined in IEEE 754-2008.
pub struct Double {}

use Add: Double {
    fn external add(self, other: Double) -> Double
}

use Sub: Double {
    fn external sub(self, other: Double) -> Double
}

use Mul: Double {
    fn external mul(self, other: Double) -> Double
}

use Div: Double {
    fn external div(self, other: Double) -> Double
}

use Equal: Double {
    fn external eq(self, other: Double) -> Boolean
}

use Compare: Double {
    fn external lt(self, other: Double) -> Boolean
    fn external le(self, other: Double) -> Boolean

    fn external gt(self, other: Double) -> Boolean
    fn external ge(self, other: Double) -> Boolean
}

use Negate: Double {
    fn external negate(self) -> Double
}
